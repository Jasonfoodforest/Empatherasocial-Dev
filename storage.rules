rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // user uploads to: post_uploads/<uid>/<fileName>
    match /post_uploads/{uid}/{fileName} {
      allow read: if true; // anyone can view posted media
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // chat uploads (so messages can send files too)
    match /chat_uploads/{chatKey}/{anyFile=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}

